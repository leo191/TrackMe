
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.leo.trackme.MapsActivity"
    >






<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true" />

    <EditText

        android:background="@android:color/background_light"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:id="@+id/user_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="your name"
        android:layout_alignParentStart="true" />
    <EditText
        android:layout_below="@+id/user_ed"
        android:background="@android:color/background_light"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="5dp"
        android:id="@+id/search_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Search the persone"
         />

    <TextView
        android:id="@+id/latlongtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/trackbt"
        android:layout_marginBottom="29dp"
        android:textSize="20dp"
        android:background="@android:color/white"
        android:text="TextView" />
    <Button

        android:id="@+id/trackbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:text="Tack"
        android:layout_below="@+id/search_ed"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        android:textSize="20dp"
        android:layout_above="@+id/sub"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/sub"
        android:layout_marginTop="-15dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textSize="30dp"
        android:text="-"
        android:layout_below="@+id/trackbt"
        android:layout_alignParentEnd="true" />

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">
        <RadioButton android:id="@+id/rad_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Normal View"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton android:id="@+id/rad_sat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satalite View"
            android:onClick="onRadioButtonClicked"/>
    </RadioGroup>


</RelativeLayout>
